<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Chỉnh sửa Nhân sự</title>
  <style>
    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f4f6f8;
      margin: 0;
      padding: 0;
    }
    .form-container {
      max-width: 800px;
      margin: 40px auto;
      background-color: #fff;
      padding: 30px 40px;
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }
    h2 {
      text-align: center;
      margin-bottom: 25px;
      color: #333;
    }
    .form-group {
      margin-bottom: 20px;
    }
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      color: #333;
    }
    input, select, textarea {
      width: 100%;
      padding: 10px 12px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 16px;
    }
    .form-buttons {
      display: flex;
      justify-content: space-between;
      margin-top: 30px;
    }
    .submit-btn, .back-btn {
      padding: 10px 20px;
      font-size: 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: 0.3s ease;
      text-decoration: none;
    }
    .submit-btn {
      background-color: #28a745;
      color: #fff;
    }
    .submit-btn:hover {
      background-color: #218838;
    }
    .back-btn {
      background-color: #6c757d;
      color: #fff;
    }
    .back-btn:hover {
      background-color: #5a6268;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2>Chỉnh sửa Nhân sự</h2>
    <form id="edit-personnel-form" enctype="multipart/form-data">
      <div class="form-group">
        <label>Họ tên *</label>
        <input type="text" name="fullName" value="<%= user.fullName %>" required />
      </div>
      <div class="form-group">
        <label>Email *</label>
        <input type="email" name="email" value="<%= user.email %>" required />
      </div>
      <div class="form-group">
        <label>Tên đăng nhập *</label>
        <input type="text" name="username" value="<%= user.username %>" required />
      </div>
      <div class="form-group">
        <label>Số điện thoại</label>
        <input type="text" name="mobile" value="<%= user.mobile || '' %>" />
      </div>
      <% for (let i = 0; i < 3; i++) { 
     const jobTitle = user.jobTitles && user.jobTitles[i] ? user.jobTitles[i] : {};
%>
  <div class="form-group">
    <label>Chức danh <%= i + 1 %> (VI)</label>
    <input type="text" name="jobTitles[<%= i %>][vi]" value="<%= jobTitle.vi || '' %>" />
  </div>
  <div class="form-group">
    <label>Chức danh <%= i + 1 %> (EN)</label>
    <input type="text" name="jobTitles[<%= i %>][en]" value="<%= jobTitle.en || '' %>" />
  </div>
<% } %>

      <div class="form-group">
        <label>Học vị (VI)</label>
        <select name="degree[vi]">
          <option value="">--Chọn--</option>
          <% ['ThS.', 'TS.', 'GS.', 'PGS.TS.'].forEach(function(option) { %>
            <option value="<%= option %>" <%= user.degree?.vi === option ? 'selected' : '' %>><%= option %></option>
          <% }); %>
        </select>
      </div>
      <div class="form-group">
        <label>Học vị (EN)</label>
        <select name="degree[en]">
          <option value="">--Select--</option>
          <% ['BSc.', 'MSc.', 'PhD.', 'Prof.', 'Assoc. Prof.'].forEach(function(option) { %>
            <option value="<%= option %>" <%= user.degree?.en === option ? 'selected' : '' %>><%= option %></option>
          <% }); %>
        </select>
      </div>
      <div class="form-group">
        <label>Vai trò hệ thống *</label>
        <select name="role" required>
          <% ['intern', 'personnel', 'admin', 'colab'].forEach(function(option) { %>
            <option value="<%= option %>" <%= user.role === option ? 'selected' : '' %>><%= option %></option>
          <% }); %>
        </select>
      </div>
      <div class="form-group">
        <label>Vai trò trong Lab (VI)</label>
        <select name="roleInLab[vi]">
          <option value="">--Chọn--</option>
          <% ['Trưởng nhóm', 'Thư ký, Thành viên chủ chốt', 'Thành viên chủ chốt', 'Thành viên', 'Thành viên cộng tác'].forEach(function(option) { %>
            <option value="<%= option %>" <%= user.roleInLab?.vi === option ? 'selected' : '' %>><%= option %></option>
          <% }); %>
        </select>
      </div>
      <div class="form-group">
        <label>Vai trò trong Lab (EN)</label>
        <select name="roleInLab[en]">
          <option value="">--Select--</option>
          <% ['Group Leader', 'Secretary, Key Member', 'Key Member', 'Member', 'Collaborating Member'].forEach(function(option) { %>
            <option value="<%= option %>" <%= user.roleInLab?.en === option ? 'selected' : '' %>><%= option %></option>
          <% }); %>
        </select>
      </div>
      <div class="form-group">
        <label>Giới thiệu (VI)</label>
        <textarea name="bio[vi]"><%= user.bio?.vi || '' %></textarea>
      </div>
      <div class="form-group">
        <label>Giới thiệu (EN)</label>
        <textarea name="bio[en]"><%= user.bio?.en || '' %></textarea>
      </div>
      <div class="form-group">
  <label>Ảnh đại diện (Avatar)</label>
  <% if (user.avatar) { %>
    <img src="<%= user.avatar %>" alt="Avatar" style="max-width: 150px; border-radius: 10px; display: block; margin-bottom: 10px;">
  <% } %>
  <input type="file" name="avatarFile" accept="image/*">
</div>

      <div class="form-group">
        <label>Google Scholar ID</label>
        <input type="text" name="scholarID" value="<%= user.scholarID || '' %>" />
      </div>
      <div class="form-group">
        <label>Tài khoản bị khoá?</label>
        <select name="isLocked">
          <option value="false" <%= !user.isLocked ? 'selected' : '' %>>Không</option>
          <option value="true" <%= user.isLocked ? 'selected' : '' %>>Có</option>
        </select>
      </div>
      <div class="form-buttons">
        <button type="submit" class="submit-btn">Cập nhật</button>
        <a href="/admin" class="back-btn">Quay lại</a>
      </div>
    </form>
  </div>

<script>
document.getElementById('edit-personnel-form').addEventListener('submit', async function (e) {
    e.preventDefault();
    const form = e.target;
    const formData = new FormData(form);
    try {
        const response = await fetch(`/admin/user/update-personnel/<%= user._id %>`, {
            method: 'POST',
            body: formData
        });
        const result = await response.json();
        if (response.ok) {
            alert('✅ Cập nhật thành công!');
        } else {
            alert('❌ Cập nhật thất bại: ' + (result.error || result.message || 'Lỗi không xác định.'));
        }
    } catch (error) {
        alert('❌ Lỗi khi gửi dữ liệu: ' + error.message);
    }
});
</script>
</body>
</html>
