<%- include('../partials/header') %>
<section class="news-section">
    <div class="container">
        <h1 style="display: flex; justify-content: space-between; align-items: center;">
            <span>Edit News Article</span>
            <a href="/admin" class="btn btn-secondary" style="background-color: #6c757d; color: #fff; padding: 8px 16px; border-radius: 5px; text-decoration: none;">← Back</a>
        </h1>
        <div id="error-message" style="color: red; display: none; margin-bottom: 20px;"></div>
        <form action="/admin/news/update/<%= news._id %>" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" required value="<%= news.title %>">
            </div>
            <div class="form-group">
                <label>Current Thumbnail</label><br>
                <% if (news.thumbnail) { %>
                    <img src="<%= news.thumbnail %>" style="max-height: 100px; display: block; margin-bottom: 10px;">
                <% } else { %>
                    <p><i>No thumbnail uploaded</i></p>
                <% } %>
                <label for="thumbnail">Change Thumbnail</label>
                <input type="file" class="form-control-file" id="thumbnail" name="thumbnail">
            </div>
            <div class="form-group">
                <label>Categories</label>
                <div id="categories-container" class="categories-list">
                    <!-- Danh sách checkbox sẽ được populate bằng JavaScript -->
                </div>
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea id="editor" name="content"><%- news.content %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</section>

<style>
    .news-section { padding: 60px 0; background: #fff; }
    .form-group { margin-bottom: 20px; }
    .form-control, .form-control-file { width: 100%; padding: 10px; }
    .btn-primary { background: #007bff; color: #fff; padding: 10px 20px; border: none; border-radius: 5px; }
    .btn-primary:hover { background: #0056b3; }
    .cke_notifications_area { display: none !important; }
    .categories-list {
        max-height: 200px;
        overflow-y: auto;
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 10px;
        background: #f8f9fa;
    }
    .categories-list label {
        display: block;
        margin-bottom: 8px;
        cursor: pointer;
        color: #333;
        font-size: 14px;
    }
    .categories-list input[type="checkbox"] {
        margin-right: 8px;
        accent-color: #007bff;
    }
    .categories-list label:hover {
        background: #e9ecef;
        border-radius: 3px;
        padding: 2px 5px;
    }
</style>

<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
<script>
    // Hiển thị thông báo lỗi
    function showError(message) {
        const errorDiv = document.getElementById('error-message');
        errorDiv.textContent = message;
        errorDiv.style.display = 'block';
    }

    // Danh sách category đã được chọn
    const selectedCategories = '<%- JSON.stringify(news.categories || []) %>z';

    // Load category
    async function loadCategories() {
        try {
            const res = await fetch('/api/v1/categories');
            const data = await res.json();
            if (data.status === 'success') {
                const container = document.getElementById('categories-container');
                data.data.forEach(category => {
                    const label = document.createElement('label');
                    const checkbox = document.createElement('input');
                    checkbox.type = 'checkbox';
                    checkbox.name = 'categoryIds[]';
                    checkbox.value = category._id;
                    if (selectedCategories.includes(category._id)) {
                        checkbox.checked = true;
                    }
                    label.appendChild(checkbox);
                    label.appendChild(document.createTextNode(category.name));
                    container.appendChild(label);
                });
            } else {
                showError('Failed to load categories.');
            }
        } catch (err) {
            showError('Error fetching categories: ' + err.message);
        }
    }

    // Khởi tạo CKEditor
    CKEDITOR.replace('editor', {
        extraPlugins: 'uploadimage',
        filebrowserUploadUrl: '/api/v1/news/upload-image',
        filebrowserImageUploadUrl: '/api/v1/news/upload-image',
        uploadUrl: '/api/v1/news/upload-image',
        height: 300
    });

    // Validate content không rỗng
    document.querySelector('form').addEventListener('submit', (e) => {
        const content = CKEDITOR.instances.editor.getData();
        if (!content.trim()) {
            e.preventDefault();
            alert('Content is required!');
        }
    });

    document.addEventListener('DOMContentLoaded', loadCategories);
</script>
<%- include('../partials/footer') %>
