  }
  .typing-indicator {
    display: flex;
    gap: 4px;
    padding: 8px 12px;
  }
  .typing-dot {
    width: 8px;
    height: 8px;
    background: #2c3e50;
    border-radius: 50%;
    animation: typing 1s infinite ease-in-out;
  }
  .typing-dot:nth-child(2) { animation-delay: 0.2s; }
  .typing-dot:nth-child(3) { animation-delay: 0.4s; }
  @keyframes typing {
    0%, 100% { transform: translateY(0); }
