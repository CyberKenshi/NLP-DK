<%- include('../partials/header') %>
<div class="admin-wrapper">
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <h3>Admin Panel</h3>
        </div>
        <ul class="sidebar-menu">
            <li><a href="/admin/dashboard" class="active">Dashboard</a></li>
            <li><a href="/admin/news-form">Manage News</a></li>
            <li><a href="/admin/categories">Manage Categories</a></li>
            <li><a href="/admin/users">Manage Users</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <header class="main-header">
            <h2>Dashboard</h2>
        </header>
        <div class="dashboard-content">
            <div class="card-grid">
                <div class="card">
                    <h4>Total News</h4>
                    <p>12</p>
                </div>
                <div class="card">
                    <h4>Total Categories</h4>
                    <p>5</p>
                </div>
                <div class="card">
                    <h4>Total Users</h4>
                    <p>25</p>
                </div>
            </div>
            <div class="recent-news">
                <h3>Recent News</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Sample News 1</td>
                            <td>Technology</td>
                            <td>May 22, 2025</td>
                        </tr>
                        <tr>
                            <td>Sample News 2</td>
                            <td>Health</td>
                            <td>May 21, 2025</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-wrapper { display: flex; min-height: 100vh; }
    .sidebar { width: 250px; background: #2c3e50; color: #fff; padding: 20px 0; }
    .sidebar-header { padding: 10px; text-align: center; }
    .sidebar-menu { list-style: none; padding: 0; }
    .sidebar-menu li { padding: 10px 20px; }
    .sidebar-menu li a { color: #fff; text-decoration: none; }
    .sidebar-menu li a.active, .sidebar-menu li a:hover { color: #1abc9c; }
    .main-content { flex: 1; padding: 20px; }
    .main-header { margin-bottom: 20px; }
    .card-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 20px; }
    .card { background: #fff; padding: 20px; border-radius: 5px; box-shadow: 0 0 10px rgba(0,0,0,0.1); text-align: center; }
    .recent-news table { width: 100%; border-collapse: collapse; }
    .recent-news th, .recent-news td { padding: 10px; border: 1px solid #ddd; text-align: left; }
    .recent-news th { background: #f4f4f4; }
</style>

<%- include('../partials/footer') %>