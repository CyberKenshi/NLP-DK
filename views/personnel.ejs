<%- include('partials/header') %>
<section class="personnel-section">
  <div class="container">
    <div class="row">
      <% if (personnel && personnel.length > 0) { %>

        <% const personnelList = personnel.filter(u => u.role !== 'colab'); %>
        <% const colabList = personnel.filter(u => u.role === 'colab'); %>

        <% if (personnelList.length > 0) { %>
          <div class="col-12">
            <h4 style="border-bottom: 5px solid #007bff; padding-bottom: 5px; margin-top: 10px;  margin-bottom: 10px;"><%= __('personnel.personnel_title') %></h4>
          </div>
          <% personnelList.forEach(user => { %>
            <div class="col-md-3 col-sm-6">
              <a href="/about/personnel-detail/<%= user._id %>" class="personnel-card-link">
                <div class="personnel-card">
                  <% if (user.avatar) { %>
                    <img src="<%= user.avatar %>" alt="<%= user.fullName %>" class="avatar-icon">
                  <% } else { %>
                    <i class="fa fa-user-circle avatar-icon"></i>
                  <% } %>
                  <h3>
                    <%= user.degree ? (locale === 'vi' ? user.degree.vi : user.degree.en) : '' %> <%= user.fullName %>
                  </h3>

                 <% if (user.role !== 'colab') { %>
                  <% const validJobTitles = (user.jobTitles || []).filter(title => title && (title.vi || title.en)); %>
                  <% if (validJobTitles.length > 0) { %>
                    <ul class="job-title-list">
                      <% validJobTitles.forEach(title => { %>
                        <li><%= locale === 'vi' ? title.vi : title.en %></li>
                      <% }); %>
                    </ul>
                  <% } else { %>
                    <p class="job-title">N/A</p>
                  <% } %>
                <% } %>
 <% if (user.roleInLab && ((locale === 'vi' && user.roleInLab.vi) || (locale === 'en' && user.roleInLab.en))) { 
                      const roleText = locale === 'vi' ? user.roleInLab.vi : user.roleInLab.en;
                     const roleClass = roleText
                        .toLowerCase()
                        .normalize('NFD').replace(/[\u0300-\u036f]/g, '') // bỏ dấu
                        .replace(/\s/g, '-')  // thay space bằng dấu gạch ngang
                        .replace(/,/g, '');   // bỏ dấu phẩy
                  %>
                    <span class="role-badge <%= roleClass %>">
                      <%= roleText %>
                    </span>
                  <% } %>
                </div>
              </a>
            </div>
          <% }); %>
        <% } %>

        <% if (colabList.length > 0) { %>
          <div class="col-12">
            <h4 style="border-bottom: 5px solid #007bff; padding-bottom: 5px; margin-top: 30px; margin-bottom: 10px;"><%= __('personnel.colaborators') %></h4>
          </div>
          <% colabList.forEach(user => { %>
            <div class="col-md-3 col-sm-6">
              <!-- <a href="#" class="personnel-card-link"> -->
                <div class="personnel-card">
                  <% if (user.avatar) { %>
                    <img src="<%= user.avatar %>" alt="<%= user.fullName %>" class="avatar-icon">
                  <% } else { %>
                    <i class="fa fa-user-circle avatar-icon"></i>
                  <% } %>
                  <h3>
                    <%= user.degree ? (locale === 'vi' ? user.degree.vi : user.degree.en) : '' %> <%= user.fullName %>
                  </h3>
                  
                  <% if (user.jobTitles && user.jobTitles.length > 0) { %>
                    <p class="job-title">
                      <%= user.jobTitles.map(title => locale === 'vi' ? title.vi : title.en).join(', ') %>
                    </p>
                    <% } %>
                    <p class="bio"><%= locale === 'vi' ? user.bio.vi : user.bio.en %></p>
                    <%
                      const roleText = user.roleInLab ? (locale === 'vi' ? user.roleInLab.vi : user.roleInLab.en) : '';
                      const roleClass = roleText.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '').replace(/\s/g, '-');
                    %>
                    <% if (roleText) { %>
                      <span class="role-badge <%= roleClass %>">
                        <%= roleText %>
                      </span>
                    <% } %>
                </div>
              <!-- </a> -->
            </div>
          <% }); %>
        <% } %>

      <% } else { %>
        <div class="col-12">
          <p class="text-center"><%= __('personnel.no_users') %></p>
        </div>
      <% } %>
    </div>
  </div>
</section>
<style>
  .personnel-section {
    padding: 40px 0;
    background: #fff;
  }
  .personnel-card {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 15px;
    text-align: center;
    margin-bottom: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 300px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .personnel-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .personnel-card-link:hover .personnel-card {
    transform: translateY(-5px);
    border-color: #007bff;
    box-shadow: 0 4px 10px rgba(0, 123, 255, 0.2);
  }
  .personnel-card .avatar-icon {
    font-size: 80px;
    color: #ccc;
    margin-bottom: 10px;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  .personnel-card img.avatar-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 10px;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  .personnel-content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .personnel-card h3 {
    color: #333;
    font-size: 20px;
    margin-bottom: 5px;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .personnel-card .role-label {
    display: inline-block;
    font-size: 12px;
    color: #fff;
    background: #007bff;
    padding: 3px 8px;
    border-radius: 12px;
    margin: 10px 0;
    align-self: center;
  }
  .personnel-card .job-title {
    color: #555;
    font-size: 14px;
    font-style: italic;
    margin-bottom: 8px;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .personnel-card .bio {
    color: #666;
    font-size: 14px;
    margin-bottom: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    flex-grow: 1;
  }
  .role-badge {
  display: inline-block;
  font-size: 13px;
  font-weight: 600;
  padding: 4px 10px;
  border-radius: 20px;
  margin: 6px 0;
  color: #fff;
  align-self: center;
}

/* Đỏ: Trưởng nhóm */
.role-badge.group-leader,
.role-badge.truong-nhom {
  background-color: #e74c3c;
}


/* Xanh dương: Thành viên, thành viên chủ chốt, thư ký, key member */
.role-badge.member,
.role-badge.key-member,
.role-badge.thanh-vien,
.role-badge.thanh-vien-chu-chot,
.role-badge.thu-ky,
.role-badge.secretary,
.role-badge.secretary-key-member,
.role-badge.thu-ky-thanh-vien-chu-chot {
  background-color: #3498db;
}
/* Xanh lá: Cộng tác viên */
.role-badge.collaborating-member,
.role-badge.thanh-vien-cong-tac,
.role-badge.thanh-vien-hop-tac {
  background-color: #2ecc71;
}


</style>
<%- include('partials/footer') %>